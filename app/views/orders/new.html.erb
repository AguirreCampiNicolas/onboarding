<%= form_with(model: @order, local: true) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_id %>
    <%= f.number_field :product_id %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>

  <h3>Delivery Addresses</h3>
  <div id="delivery_addresses">
    <%= f.fields_for :delivery_addresses do |address_form| %>
      <div class="nested-fields">
        <%= address_form.label :address %>
        <%= address_form.text_field :address %>
        <%= link_to 'Remove', '#', class: 'remove_fields' %>
      </div>
    <% end %>
  </div>
  <%= link_to_add_fields 'Add Delivery Address', f, :delivery_addresses %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
