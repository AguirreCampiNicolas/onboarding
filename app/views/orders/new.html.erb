<%= form_with(model: @order, local: true) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
        <% @order.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :product_id, value: @order.product_id %>
    <%= f.hidden_field :rut, value: @order.rut %>
    <%= f.hidden_field :bussines_name, value: @order.bussines_name %>
  </div>

  <div class="field">
    <%= f.label :quantity %>
    <%= f.number_field :quantity %>
  </div>

  <h3>Delivery Addresses</h3>
  <div id="delivery_addresses">
    <%= f.fields_for :delivery_addresses do |da_form| %>
      <%= da_form.label :full_name %>
      <%= da_form.text_field :full_name %>

      <%= da_form.label :contact %>
      <%= da_form.text_field :contact %>

      <%= da_form.label :date %>
      <%= da_form.date_select :date %>

      <%= da_form.label :time %>
      <%= da_form.time_select :time %>

      <%= da_form.label :address %>
      <%= da_form.text_field :address %>

      <%= da_form.label :ship_cost %>
      <%= da_form.number_field :ship_cost %>
    <% end %>
  </div>
  <%= link_to_add_fields 'Add Delivery Address', f, :delivery_addresses %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
